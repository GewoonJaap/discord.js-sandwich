{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "extends": ["eslint:recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "js": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["jsdoc"],
  "rules": {
    "semi": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
